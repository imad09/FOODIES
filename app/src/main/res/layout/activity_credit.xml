<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white_background"
    android:layout_height="match_parent"
    tools:context=".CreditActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        android:layout_marginBottom="1dp"
        app:cardElevation="0.5dp"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="150dp"
                android:layout_weight="1"
                android:id="@+id/back_btn"
                android:src="@drawable/back_icon_detaille"
                android:padding="10dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="Copyright de l'application"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />
            <ImageView
                android:layout_width="150dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="Application Pour Soutenance L3"
                android:layout_weight="1"
                android:layout_marginVertical="15dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="Application Mobile pour la gestion des restaurants"
                android:layout_weight="1"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/grey_color"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                app:cardElevation="0.5dp"
                app:cardCornerRadius="10dp"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/green__gradient"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="60dp"
                            android:src="@drawable/ic_education"
                            android:layout_height="60dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:text="Imad Ferroudji"
                            android:textAllCaps="true"
                            android:layout_marginVertical="10dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:text="Chef de projet - Développeur senior"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                app:cardElevation="0.5dp"
                app:cardCornerRadius="10dp"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/red__gradient"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="60dp"
                            android:src="@drawable/ic_education"
                            android:layout_height="60dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:text="Haithem belhouchet"
                            android:layout_marginVertical="10dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:text="Backend Developer "
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                app:cardElevation="0.5dp"
                app:cardCornerRadius="10dp"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/blue_gradient"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="60dp"
                            android:src="@drawable/ic_education"
                            android:layout_height="60dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_marginRight="25dp"
                            android:text="Ghoufi yakoub"
                            android:textAllCaps="true"
                            android:layout_marginVertical="10dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:text="CONCEPTEUR UX/UI"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="Les technologies"
                android:layout_weight="1"
                android:layout_marginVertical="15dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="Technologies que nous avons utilisées dans cette application"
                android:layout_weight="1"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/grey_color"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="80dp"
                        android:padding="5dp"
                        android:src="@drawable/firebase_icon"
                        android:layout_height="80dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:text="Firebase"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="80dp"
                        android:padding="5dp"
                        android:src="@drawable/lottieicon"
                        android:layout_height="80dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:text="Lottie"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="80dp"
                        android:padding="5dp"
                        android:src="@drawable/materialdesign"
                        android:layout_height="80dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:text="Material Design"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:text="Groupe"
                        android:layout_weight="1"
                        android:layout_marginVertical="15dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:text="Encadré par: "
                        android:layout_weight="1"
                        android:layout_marginVertical="15dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:text="Bendib"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="Le Rapport"
                android:layout_weight="1"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="Vous pouvez télécharger notre rapport en cliquant sur le bouton ci-dessous"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/grey_color"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/get_stared_btn"
                android:clickable="true"
                android:layout_marginVertical="15dp"
                app:cardElevation="0.7dp"
                android:layout_marginHorizontal="70dp"
                android:layout_alignParentBottom="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="Télécharger Le Rapport"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>