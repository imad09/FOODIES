<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    app:cardElevation="0.5dp"
    android:layout_height="235dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_centerInParent="true"
                android:id="@+id/category_image"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="2dp"
                android:layout_height="100dp">

            </de.hdodenhof.circleimageview.CircleImageView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="CRIPTION DE PROJETS"
                android:id="@+id/category_name"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_height="45dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="20dp"
                app:cardElevation="0.5dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:id="@+id/add_product_image"
                android:layout_height="37dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:text="Produits 7"
                        android:id="@+id/category_count"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="50dp">
        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:id="@+id/category_delete_btn"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#E8172F"
            android:layout_alignParentRight="true"
            android:layout_height="25dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:text="X"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>