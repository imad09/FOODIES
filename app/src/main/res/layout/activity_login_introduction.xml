<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white_background"
    android:layout_height="match_parent"
    tools:context=".LoginIntroductionActivity">
    <com.flaviofaria.kenburnsview.KenBurnsView
        android:layout_width="match_parent"
        android:src="@mipmap/login_wallpaper_test"
        android:scaleType="centerCrop"
        android:layout_height="match_parent">
    </com.flaviofaria.kenburnsview.KenBurnsView>
    <View
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:alpha="0.4"
        android:layout_height="match_parent">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:text="LIVRER"
                android:id="@+id/product_coffe_name"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAllCaps="true"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="20dp"
                android:text="FAST FOOD"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAllCaps="true"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="20dp"
                android:text="Ã€ TON"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAllCaps="true"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="20dp"
                android:text="PORTE"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAllCaps="true"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="270dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="310dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginRight="55dp"
                    app:cardCornerRadius="25dp"
                    android:id="@+id/login_btn"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="55dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="7dp"
                        android:text="S'identifier"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:layout_height="300dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginRight="55dp"
                    app:cardCornerRadius="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="55dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/google_icon_svg"
                            android:padding="11dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="Connectez-vous Google"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>