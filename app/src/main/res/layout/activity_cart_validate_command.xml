<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    tools:context=".CartValidateCommandActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="150dp"
            android:src="@drawable/back_icon_detaille"
            android:padding="10dp"
            android:id="@+id/back_btn"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:text="Valider la commande"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:layout_weight="1"
            android:textAlignment="center"
            android:ellipsize="end"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="@color/third_color"
            android:textSize="17sp"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
        <ImageView
            android:layout_width="150dp"
            android:paddingLeft="11sp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </ImageView>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/main_command_layout"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                app:cardElevation="0.5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="#C8C7CD"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:id="@+id/command_order_number"
                            android:text="Command Numero #1354789"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="#2D2D2D"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/command_product_recycler"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                app:cardElevation="0.5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardElevation="0.2dp"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Adresse de livraison"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="#2D2D2D"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/command_adress_layout"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dp"
                            android:padding="13dp"
                            android:layout_gravity="center"
                            android:src="@drawable/detaille_location_icon"
                            android:layout_height="50dp">
                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/command_user_adresse"
                            android:textAlignment="center"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/grey_color"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_margin="7dp"
                        android:layout_marginRight="55dp"
                        android:id="@+id/command_add_adresse_btn"
                        android:layout_marginLeft="55dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="Ajouter une adresse"
                            android:textAlignment="center"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                app:cardElevation="0.5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardElevation="0.2dp"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:paddingLeft="5dp"
                                android:layout_weight="1"
                                android:paddingRight="5dp"
                                android:text="Votre Numéro De Téléphone"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="#2D2D2D"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlCompat" />
                            <TextView
                                android:layout_width="200dp"
                                android:paddingLeft="5dp"
                                android:layout_weight="1"
                                android:paddingRight="5dp"
                                android:text="Obligatoire"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="13sp"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlCompat" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="60dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="55dp"
                            android:layout_marginRight="55dp"
                            android:layout_marginBottom="5dp"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="0.5dp"
                            app:cardBackgroundColor="#F1F1F3"
                            android:layout_height="match_parent">
                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:layout_width="match_parent"
                                app:met_hideUnderline="true"
                                android:paddingRight="10dp"
                                android:id="@+id/command_user_phone_number"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:maxEms="16"
                                android:textColor="@color/third_color"
                                android:hint="Mobile"
                                android:paddingLeft="15dp"
                                android:fontFamily="@font/foodies_font_1"
                                android:textSize="12dp"
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="60dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="0.5dp"
                    app:cardCornerRadius="25dp"
                    android:id="@+id/cart_validate_btn"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="3dp"
                        android:text="Valider"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>