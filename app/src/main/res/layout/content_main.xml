<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="100dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="0.5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/foodies_font_1"
                            android:text="Voir Tout"
                            android:textColor="@color/third_color"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/colorPrimaryDark">
                        </View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:text="LES "
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:text="PLUS DEMANDÉS"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlCompat" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:id="@+id/most_wanted_product_recycler"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="0.5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/foodies_font_1"
                            android:text="Voir Tout"
                            android:textColor="@color/third_color"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/colorPrimaryDark">
                        </View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:text="PL"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:text="AT OFFICIEL"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlCompat" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:id="@+id/plat_recycler"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210dp">
                <com.flaviofaria.kenburnsview.KenBurnsView
                    android:layout_width="match_parent"
                    android:src="@mipmap/burger_image_temp"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimary"
                    android:alpha="0.5"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:text="Plat Shawarma "
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        android:layout_marginTop="25dp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="13sp"
                        android:text="L'assiette Shawarma est géniale Vous devez la goûter, nous avons une réduction sur elle dépêchez-vous !!"
                        android:fontFamily="@font/foodies_font_1"
                        android:layout_marginTop="7dp"
                        android:textColor="#D3D3D3"
                        android:textAlignment="center"
                        android:maxLines="4"
                        android:id="@+id/most_wanted_product_description"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:text="1900"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/white"
                            android:textSize="31sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:text="DA"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="31sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="0.5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/colorPrimaryDark">
                        </View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:text="N"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:text="OTRE MENU"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlCompat" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:id="@+id/menu_recycler"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <com.flaviofaria.kenburnsview.KenBurnsView
                    android:layout_width="match_parent"
                    android:src="@mipmap/coffe"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimary"
                    android:alpha="0.5"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:text="COFFE"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/white"
                        android:textSize="27sp"
                        android:layout_marginTop="40dp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                    <View
                        android:layout_width="65dp"
                        android:background="@color/colorPrimaryDark"
                        android:layout_gravity="center"
                        android:layout_height="2dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="13dp"
                        android:text="Nous avons une offre spéciale pour le café au petit-déjeuner"
                        android:textAlignment="center"
                        android:fontFamily="@font/foodies_font_1"
                        android:layout_marginTop="7dp"
                        android:textColor="#D3D3D3"
                        android:maxLines="4"
                        android:ellipsize="end"
                        android:layout_marginRight="13dp"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/bottom_arrow_icon"
                            android:padding="7dp"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/horloge_icon"
                        android:padding="11dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="8:00-12:00"
                        android:textStyle="bold"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/coffe_recycler"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1dp"
        app:cardElevation="0.7dp"
        android:layout_height="55dp">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:itemRippleColor="@color/colorPrimaryDark"
            android:background="@color/white"
            app:itemIconTint="@color/colorPrimaryDark"
            app:itemTextColor="@color/third_color"
            app:menu="@menu/bottom_navigation_menu" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="50dp"
        android:id="@+id/access_to_admin_btn"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:text="Accès au panneau d'administration"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="30dp"
        android:layout_centerVertical="true"
        app:cardElevation="2dp"
        android:id="@+id/open_admin_window"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/bottom_arrow"
                android:rotation="-90"
                android:layout_height="30dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>