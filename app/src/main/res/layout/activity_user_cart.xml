<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white_background"
    android:layout_height="match_parent"
    tools:context=".UserCartActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="150dp"
            android:src="@drawable/back_icon_detaille"
            android:padding="12dp"
            android:layout_weight="1"
            android:id="@+id/back_btn"
            android:layout_height="match_parent">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:text="Chariot"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:layout_weight="1"
            android:textAlignment="center"
            android:ellipsize="end"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="@color/third_color"
            android:textSize="19sp"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
        <ImageView
            android:layout_width="150dp"
            android:paddingLeft="11sp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </ImageView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/zzx12"
        android:layout_marginTop="50dp"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/user_cart_recycler"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/empty_cart_layout"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="250dp">
                <ImageView
                    android:layout_width="200dp"
                    android:padding="15dp"
                    android:src="@drawable/shopping_cart_svg"
                    android:layout_height="250dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:text="Aucun produit dans le panier"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="64dp"
                android:layout_marginVertical="15dp"
                android:id="@+id/go_to_main"
                app:cardElevation="0.5dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="Aller Ã  Obtenir des produits"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/zzx12"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:text="Total"
                        android:layout_gravity="center_vertical"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="0"
                        android:id="@+id/user_cart_total_price"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_vertical"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="DA"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/foodies_font_1"
                        android:textSize="11dp"
                        android:paddingTop="4dp"
                        android:layout_marginLeft="2dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:text="Taxes et frais"
                        android:layout_gravity="center_vertical"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="0"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_vertical"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="DA"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/foodies_font_1"
                        android:textSize="11dp"
                        android:paddingTop="4dp"
                        android:layout_marginLeft="2dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:text="livraison"
                        android:layout_gravity="center_vertical"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Gratuite"
                        android:id="@+id/product_coffe_price"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_gravity="center_vertical"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="60dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="0.5dp"
                    app:cardCornerRadius="25dp"
                    android:id="@+id/cart_validate_btn"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="3dp"
                        android:text="Check-out"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>