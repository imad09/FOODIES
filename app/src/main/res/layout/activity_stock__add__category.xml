<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white_background"
    android:layout_height="match_parent"
    tools:context=".Stock_Add_Category">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        android:layout_marginBottom="1dp"
        app:cardElevation="0.5dp"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="150dp"
                android:layout_weight="1"
                android:src="@drawable/back_icon_detaille"
                android:padding="10dp"
                android:id="@+id/back_btn"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="Ajouter Une Catégorie"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />
            <ImageView
                android:layout_width="150dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="50dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="55dp"
                android:layout_height="250dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="200dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/add_category_main_image"
                    android:src="@drawable/plus_icon"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="2dp"
                    android:padding="30dp"
                    android:scaleType="centerCrop"
                    android:layout_height="200dp">
                </de.hdodenhof.circleimageview.CircleImageView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="60dp">
                <View
                    android:layout_width="150dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                </View>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="0.5dp"
                    app:cardBackgroundColor="#F1F1F3"
                    android:layout_height="match_parent">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        app:met_hideUnderline="true"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:id="@+id/add_category_name"
                        android:paddingRight="10dp"
                        android:textColor="@color/grey_color"
                        android:hint="Entrer Le Nom De Category"
                        android:paddingLeft="15dp"
                        android:fontFamily="@font/foodies_font_1"
                        android:textSize="12dp"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="150dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                </View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_weight="1"
                    android:id="@+id/check_image_layout"
                    android:layout_height="match_parent">
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="0.5dp"
                    app:cardBackgroundColor="#F1F1F3"
                    android:layout_height="match_parent">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        app:met_hideUnderline="true"
                        android:inputType="text"
                        android:id="@+id/add_category_description"
                        android:imeOptions="actionDone"
                        android:paddingRight="10dp"
                        android:textColor="@color/grey_color"
                        android:hint="Entrez la description de la catégorie"
                        android:paddingLeft="15dp"
                        android:fontFamily="@font/foodies_font_1"
                        android:textSize="12dp"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="70dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="20dp"
                    android:id="@+id/add_category_image_from_storage_btn"
                    app:cardElevation="0.5dp"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="40dp"
                            android:src="@drawable/storage_icon"
                            android:layout_marginLeft="15dp"
                            android:padding="7dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:text="Ouvrir à partir du stockage"
                            android:layout_marginRight="25sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:id="@+id/add_category_to_database_btn"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:text="Ajouter Une Cattegory"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>