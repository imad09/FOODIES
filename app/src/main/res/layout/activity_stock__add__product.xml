<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    tools:context=".Stock_Add_Product">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        android:layout_marginBottom="1dp"
        app:cardElevation="0.5dp"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="150dp"
                android:layout_weight="1"
                android:id="@+id/back_btn"
                android:src="@drawable/back_icon_detaille"
                android:padding="10dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="Ajouter Un Produit"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />
            <ImageView
                android:layout_width="150dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="50dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="0.5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/colorPrimaryDark">
                        </View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:text="ID DE PRODUIT"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlCompat" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:text="ID DE PRODUIT"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="#5D6275"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="10dp"
                            app:cardElevation="0.5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_height="50dp">
                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:layout_width="match_parent"
                                app:met_hideUnderline="true"
                                android:textSize="13sp"
                                android:id="@+id/add_product_id"
                                android:paddingLeft="5dp"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:paddingRight="5dp"
                                android:inputType="number"
                                app:met_baseColor="@color/colorPrimary"
                                android:fontFamily="@font/foodies_font_1"
                                android:hint="ID DE PRODUIT..."
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_height="70dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="300dp"
                                app:cardBackgroundColor="@color/colorPrimaryDark"
                                app:cardCornerRadius="20dp"
                                android:id="@+id/add_product_id_qr_btn"
                                app:cardElevation="0.5dp"
                                android:layout_height="50dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:src="@drawable/qr_code_code_white"
                                        android:layout_marginLeft="15dp"
                                        android:padding="7dp"
                                        android:layout_height="match_parent"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:textAlignment="center"
                                        android:text="Scannez QR CODE"
                                        android:layout_marginRight="25sp"
                                        android:layout_gravity="center_vertical"
                                        android:fontFamily="@font/foodies_font_1"
                                        android:textColor="@color/white"
                                        android:textSize="13sp"
                                        android:layout_height="wrap_content"
                                        tools:ignore="RtlCompat" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="0.5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/colorPrimaryDark">
                        </View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:text="DETAILLS DE PRODUIT"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlCompat" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:text="Nom De Produit"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="#5D6275"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="10dp"
                            app:cardElevation="0.5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_height="50dp">
                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:layout_width="match_parent"
                                app:met_hideUnderline="true"
                                android:textSize="13sp"
                                android:paddingLeft="5dp"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:id="@+id/add_product_name"
                                android:paddingRight="5dp"
                                app:met_baseColor="@color/colorPrimary"
                                android:fontFamily="@font/foodies_font_1"
                                android:hint="Nom De Produit..."
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:text="Description De Produit"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="#5D6275"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="10dp"
                            app:cardElevation="0.5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_height="50dp">
                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:layout_width="match_parent"
                                app:met_hideUnderline="true"
                                android:textSize="13sp"
                                android:paddingLeft="5dp"
                                android:maxLines="1"
                                android:id="@+id/add_product_description"
                                android:paddingRight="5dp"
                                android:imeOptions="actionNext"
                                app:met_baseColor="@color/colorPrimary"
                                android:fontFamily="@font/foodies_font_1"
                                android:hint="Description De Produit..."
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_height="70dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="300dp"
                                app:cardBackgroundColor="@color/colorPrimary"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0.5dp"
                                android:id="@+id/add_product_image"
                                android:layout_height="50dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:src="@drawable/add_image_icon"
                                        android:layout_marginLeft="15dp"
                                        android:padding="7dp"
                                        android:layout_height="match_parent"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:textAlignment="center"
                                        android:text="Ajouter Une Image"
                                        android:layout_marginRight="25sp"
                                        android:layout_gravity="center_vertical"
                                        android:fontFamily="@font/foodies_font_1"
                                        android:textColor="@color/white"
                                        android:textSize="13sp"
                                        android:layout_height="wrap_content"
                                        tools:ignore="RtlCompat" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:visibility="gone"
                            android:id="@+id/selected_product_image_layout"
                            android:layout_height="50dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:text="Image du produit sélectionnée"
                                android:layout_marginLeft="10dp"
                                android:drawablePadding="7dp"
                                android:drawableLeft="@drawable/ic_check_black_24dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlCompat" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:text="Category"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="#5D6275"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="10dp"
                            app:cardElevation="0.5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_height="50dp">
                            <Spinner
                                android:layout_width="match_parent"
                                android:id="@+id/add_product_categories_spinner"
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="0.5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/colorPrimaryDark">
                        </View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textAlignment="center"
                                android:text="PRIX ET Quantity"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlCompat" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:text="Prix d'achat"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="#5D6275"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="100dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10sp"
                            app:cardElevation="0.5dp"
                            android:layout_marginLeft="10sp"
                            app:cardCornerRadius="15dp"
                            android:layout_height="40dp">
                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:layout_width="match_parent"
                                app:met_hideUnderline="true"
                                android:id="@+id/add_product_buying_price"
                                android:textSize="13sp"
                                android:paddingLeft="10dp"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                android:paddingRight="10dp"
                                android:inputType="number"
                                android:textColorHint="#E8172F"
                                app:met_baseColor="#E8172F"
                                android:fontFamily="@font/foodies_font_1"
                                android:hint="1500"
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:text="Quantity"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="#5D6275"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="10dp"
                            app:cardElevation="0.5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_height="50dp">
                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:layout_width="match_parent"
                                app:met_hideUnderline="true"
                                android:textSize="13sp"
                                android:paddingLeft="5dp"
                                android:maxLines="1"
                                android:inputType="number"
                                android:imeOptions="actionDone"
                                android:id="@+id/add_product_quantity"
                                android:paddingRight="5dp"
                                app:met_baseColor="@color/colorPrimary"
                                android:fontFamily="@font/foodies_font_1"
                                android:hint="Quantity..."
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/add_product_to_database_btn"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/colorPrimaryDark"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:text="Ajouter à la base de données"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
    </LinearLayout>
</RelativeLayout>