<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    app:cardElevation="0.5dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="270dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/cart_product_image"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:text="Grilled Salomon"
                    android:id="@+id/cart_product_name"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_height="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="1900"
                        android:id="@+id/cart_product_price"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="DA"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/foodies_font_1"
                        android:textSize="11dp"
                        android:paddingTop="4dp"
                        android:layout_marginLeft="2dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="right"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="30dp"
                        android:padding="4dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:id="@+id/remove_product_quantity"
                        android:src="@drawable/detaille_remove_quantity_icon"
                        android:layout_height="match_parent">
                    </ImageView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        app:cardElevation="0.5dp"
                        android:id="@+id/add_product_to_cart_btn"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/colorPrimaryDark"
                        android:layout_margin="10dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:text="Ajouter A- 2"
                            android:textAlignment="center"
                            android:maxLines="1"
                            android:id="@+id/cart_product_quantity"
                            android:layout_gravity="center_vertical"
                            android:ellipsize="end"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:id="@+id/add_product_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="4dp"
                        android:src="@drawable/detaille_add_quantity_icon">

                    </ImageView>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="50dp"
                    android:id="@+id/delete_cart_item_btn"
                    android:layout_alignParentRight="true"
                    android:padding="13dp"
                    android:src="@drawable/cart_delete_icon"
                    android:layout_height="50dp">
                </ImageView>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>