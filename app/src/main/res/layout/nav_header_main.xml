<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="100dp"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/logged_in_layout"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:textAlignment="center"
                android:ellipsize="end"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="3dp"
                android:text="Pharmacie En ligne"
                android:layout_marginHorizontal="10dp"
                android:textAlignment="center"
                android:ellipsize="end"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/grey_color"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="30dp"
                android:id="@+id/header_login_btn"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_height="45dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Se Connecter"
                        android:textAlignment="center"
                        android:ellipsize="end"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/logged_out_layout"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="80dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:id="@+id/header_image"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorPrimaryDark"
                    android:layout_height="80dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:text="-"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="17dp"
                android:textAlignment="center"
                android:id="@+id/header_username"
                android:ellipsize="end"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                android:id="@+id/header_logout_btn"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_marginHorizontal="30dp"
                android:layout_height="45dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Se dÃ©connecter"
                        android:textAlignment="center"
                        android:ellipsize="end"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
