<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    tools:context=".CommandSendActivity">
    <ImageView
        android:layout_width="50dp"
        android:src="@drawable/back_icon_detaille"
        android:padding="7dp"
        android:id="@+id/back_btn"
        android:layout_height="50dp"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="140dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="25dp"
                android:text="Agréable! Commande envoyée"
                android:maxLines="1"
                android:textAlignment="center"
                android:ellipsize="end"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="14dp"
                android:text="#1354789"
                android:maxLines="1"
                android:textAlignment="center"
                android:id="@+id/command_order_number"
                android:ellipsize="end"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="14dp"
                android:text="Votre commande sera vérifiée par notre équipe de magasin, nous vous contacterons bientôt"
                android:textAlignment="center"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/grey_color"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="15sp"
                app:cardElevation="0.5dp"
                android:layout_height="150dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingRight="5dp"
                        android:paddingLeft="6dp"
                        android:layout_alignParentBottom="true"
                        android:text="Ne partagez pas les codes Qr avec d'autres pour des raisons de sécurité"
                        android:textAlignment="center"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/grey_color"
                        android:textSize="11sp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="270dp"
                        android:layout_weight="1"
                        android:id="@+id/command_qr_code_image"
                        android:layout_height="120dp">
                    </ImageView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="120dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Commande:"
                                android:maxLines="1"
                                android:layout_gravity="center"
                                android:ellipsize="end"
                                android:fontFamily="@font/foodies_font_1"
                                android:textSize="13sp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:text="#1354789"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:id="@+id/card_order_number"
                                android:ellipsize="end"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Prix total:"
                                android:maxLines="1"
                                android:layout_gravity="center"
                                android:ellipsize="end"
                                android:fontFamily="@font/foodies_font_1"
                                android:textSize="13sp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:text="#1354789"
                                android:layout_gravity="center"
                                android:id="@+id/command_total_price"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:layout_width="82dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="3dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/foodies_font_1"
                                android:maxLines="1"
                                android:text="Date de commande:"
                                android:textSize="13sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:text="2020-04-02"
                                android:layout_gravity="center"
                                android:id="@+id/command_order_date"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
