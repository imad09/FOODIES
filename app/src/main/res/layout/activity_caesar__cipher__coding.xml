<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Caesar_Cipher_Coding">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="0.5dp"
        android:layout_marginBottom="1px"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/foodies_font_1"
                android:text="Caesar cipher"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:text="Enter Your Text"
            android:maxLines="1"
            android:textAlignment="center"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="#F1F1F3"
                app:cardElevation="0.5dp"
                android:layout_height="match_parent">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    app:met_hideUnderline="true"
                    android:paddingRight="10dp"
                    android:imeOptions="actionDone"
                    android:textColor="@color/third_color"
                    android:hint="Enter Data"
                    android:paddingLeft="15dp"
                    android:id="@+id/caesar_data_edit_text"
                    android:fontFamily="@font/foodies_font_1"
                    android:textSize="12dp"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:text="Enter Shift"
            android:maxLines="1"
            android:textAlignment="center"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="#F1F1F3"
                app:cardElevation="0.5dp"
                android:layout_height="match_parent">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    app:met_hideUnderline="true"
                    android:paddingRight="10dp"
                    android:imeOptions="actionDone"
                    android:textColor="@color/third_color"
                    android:hint="Enter Data"
                    android:paddingLeft="15dp"
                    android:id="@+id/caesar_shift_edit_text"
                    android:fontFamily="@font/foodies_font_1"
                    android:textSize="12dp"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_height="wrap_content">
            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/radio_group_caesar"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="match_parent"
                    android:text="ENCODE"
                    android:id="@+id/encode_radio"
                    android:layout_height="50dp">
                </RadioButton>
                <RadioButton
                    android:layout_width="match_parent"
                    android:text="DECODE"
                    android:id="@+id/decode_radio"
                    android:layout_height="50dp">
                </RadioButton>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                app:cardElevation="0.5dp"
                app:cardCornerRadius="25dp"
                android:id="@+id/convert_code_btn"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="Convert"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:id="@+id/caesar_result_text"
            android:layout_marginTop="30px"
            android:maxLines="1"
            android:textAlignment="center"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>