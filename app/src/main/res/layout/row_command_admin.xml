<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    app:cardElevation="0.5dp"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="50dp">
            <TextView
                android:layout_width="match_parent"
                android:text="#179889684"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:id="@+id/command_order_number"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />
            <TextView
                android:layout_width="match_parent"
                android:text="2020-05-23:18:52"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAlignment="textEnd"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:id="@+id/pharmapass_request_date"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Nom complet"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="-"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:id="@+id/command_full_name"
                    android:ellipsize="end"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Mobile"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="-"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:id="@+id/command_phone_number"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Address"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="-"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:id="@+id/command_address"
                    android:ellipsize="end"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Total Price"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="-"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:id="@+id/command_total_price"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/command_product_recycler"
            android:layout_height="70dp">

        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="50dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/command_valide_btn"
                android:layout_marginVertical="5dp"
                app:cardElevation="0.5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Valider"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="1"
                app:cardElevation="0.5dp"
                android:id="@+id/command_delete_btn"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="15dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Supprimer"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/command_status_layout"
            android:layout_height="30dp">
            <TextView
                android:layout_width="match_parent"
                android:text="Commande Valide"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:id="@+id/command_status_text"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>