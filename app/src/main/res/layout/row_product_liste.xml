<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0.5dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/product_section_names_layout"
            android:visibility="visible"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="ID"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/grey_color"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="Nom"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/grey_color"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="QTY"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/grey_color"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="Date"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/grey_color"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="Category"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/grey_color"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="Prix d'achat"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/grey_color"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="Option"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/grey_color"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:text="#1774897"
                            android:id="@+id/product_id"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:text="ASPECJIC"
                            android:id="@+id/product_name"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:text="155"
                            android:id="@+id/product_quantity"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:text="2020-04-03"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/product_added_date"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:id="@+id/product_category"
                            android:text="Aspiring"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="60dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:text="1500 DA"
                            android:id="@+id/product_buying_price"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="#E8172F"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:orientation="vertical"
                        android:layout_height="60dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_margin="2dp"
                                android:id="@+id/delete_product_btn"
                                app:cardBackgroundColor="#E8172F"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textAlignment="center"
                                    android:text="Supprimer"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/foodies_font_1"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:layout_height="wrap_content"
                                    tools:ignore="RtlCompat" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_margin="2dp"
                                android:id="@+id/edit_product_btn"
                                app:cardBackgroundColor="@color/colorPrimary"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textAlignment="center"
                                    android:text="Modifier"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/foodies_font_1"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:layout_height="wrap_content"
                                    tools:ignore="RtlCompat" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>