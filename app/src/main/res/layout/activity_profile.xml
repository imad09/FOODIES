<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white_background"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:background="@color/white_background"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="100dp"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="150dp"
                            android:id="@+id/profile_user_picture"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:layout_centerInParent="true"
                            app:civ_border_color="@color/colorPrimaryDark"
                            app:civ_border_width="2dp"
                            android:layout_height="150dp">
                        </de.hdodenhof.circleimageview.CircleImageView>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:text="Anis Khenissa"
                        android:maxLines="1"
                        android:id="@+id/profile_username"
                        android:textAlignment="center"
                        android:ellipsize="end"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="21sp"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/profile_adress_layout"
                            android:gravity="center_horizontal"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="40dp"
                                android:padding="7dp"
                                android:src="@drawable/location_profile_icon"
                                android:layout_height="match_parent">
                            </ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Cite 800,Batna"
                                android:maxLines="1"
                                android:id="@+id/profile_adresse_name"
                                android:layout_gravity="center_vertical"
                                android:textAlignment="center"
                                android:ellipsize="end"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="#BCBCBC"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlCompat" />
                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="70dp"
                            app:cardElevation="0.5dp"
                            android:layout_marginLeft="70dp"
                            android:id="@+id/add_profile_address_btn"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_height="50dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/home_icon"
                                    android:padding="10dp"
                                    android:layout_height="match_parent">
                                </ImageView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="25dp"
                                    android:text="Ajouter une adresse personnelle"
                                    android:maxLines="1"
                                    android:textAlignment="center"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/foodies_font_1"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    android:layout_height="wrap_content"
                                    tools:ignore="RtlCompat" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="70dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="70dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="3dp"
                                    android:text="16"
                                    android:maxLines="1"
                                    android:id="@+id/profile_cart_product_count"
                                    android:textAlignment="center"
                                    android:layout_gravity="center_vertical"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/foodies_font_1"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16sp"
                                    android:layout_height="wrap_content"
                                    tools:ignore="RtlCompat" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="70dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="3dp"
                                    android:text="Produits dans le panier"
                                    android:maxLines="1"

                                    android:layout_gravity="center_vertical"
                                    android:textAlignment="center"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/foodies_font_1"
                                    android:textColor="#BCBCBC"
                                    android:textSize="12sp"
                                    android:layout_height="wrap_content"
                                    tools:ignore="RtlCompat" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="70dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="70dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="3dp"
                                    android:text="16"
                                    android:maxLines="1"
                                    android:id="@+id/profile_command_count"
                                    android:textAlignment="center"
                                    android:layout_gravity="center_vertical"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/foodies_font_1"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16sp"
                                    android:layout_height="wrap_content"
                                    tools:ignore="RtlCompat" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="70dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="3dp"
                                    android:text="Produits achetés"
                                    android:maxLines="1"

                                    android:layout_gravity="center_vertical"
                                    android:textAlignment="center"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/foodies_font_1"
                                    android:textColor="#BCBCBC"
                                    android:textSize="12sp"
                                    android:layout_height="wrap_content"
                                    tools:ignore="RtlCompat" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="70dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="70dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="3dp"
                                    android:text="16"
                                    android:maxLines="1"
                                    android:textAlignment="center"
                                    android:id="@+id/profile_created_time"
                                    android:layout_gravity="center_vertical"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/foodies_font_1"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16sp"
                                    android:layout_height="wrap_content"
                                    tools:ignore="RtlCompat" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="70dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="3dp"
                                    android:text="Compte créé"
                                    android:maxLines="1"
                                    android:layout_gravity="center_vertical"
                                    android:textAlignment="center"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/foodies_font_1"
                                    android:textColor="#BCBCBC"
                                    android:textSize="12sp"
                                    android:layout_height="wrap_content"
                                    tools:ignore="RtlCompat" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="27dp"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="3dp"
                        android:text="Profile"
                        android:layout_gravity="center_vertical"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:ellipsize="end"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/third_color"
                        android:textSize="21sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="27dp"
                    app:layout_collapseMode="pin"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/back_icon_detaille"
                        android:padding="11dp"
                        android:id="@+id/back_btn"
                        android:layout_height="50dp">
                    </ImageView>
                </RelativeLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                app:tabMaxWidth="0dp"
                android:layout_marginTop="27dp"
                android:id="@+id/profile_tablayout"
                app:tabMode="fixed"
                app:tabTextAppearance="@style/tabstyle"
                app:tabIndicatorColor="@color/colorPrimaryDark"
                app:layout_collapseMode="pin"
                android:layout_height="50dp">
            </com.google.android.material.tabs.TabLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent">
            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:fitsSystemWindows="true"
                android:id="@+id/profile_viewpager"
                android:layout_height="match_parent">

            </androidx.viewpager.widget.ViewPager>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>