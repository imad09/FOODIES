<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    tools:context=".ProfileAdresseActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/back_icon_detaille"
                android:padding="11dp"
                android:layout_height="50dp">
            </ImageView>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="30dp"
            android:text="Ajouter une adresse "
            android:maxLines="1"
            android:textAlignment="center"
            android:ellipsize="end"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="7dp"
            android:text="Ajouter une adresse manuellement peut avoir un problème lorsque nous livrons vos produits"
            android:textAlignment="center"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="#BCBCBC"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="60dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0.5dp"
                app:cardBackgroundColor="#F1F1F3"
                android:layout_height="match_parent">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    app:met_hideUnderline="true"
                    android:paddingRight="10dp"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:maxEms="16"
                    android:textColor="@color/third_color"
                    android:hint="Adresse"
                    android:paddingLeft="15dp"
                    android:id="@+id/profile_adresse_name"
                    android:fontFamily="@font/foodies_font_1"
                    android:textSize="12dp"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                app:cardElevation="0.5dp"
                android:clickable="true"
                android:id="@+id/validate_user_address_btn"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="Valider"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:text="Sélectionnez l'adresse du GPS"
            android:textAlignment="center"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="#BCBCBC"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/get_location_btn"
                android:layout_marginBottom="5dp"
                app:cardElevation="0.5dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/white"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/gps_location_icon"
                        android:padding="11dp"
                        android:layout_height="match_parent">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="3dp"
                        android:text="Obtenir l'adresse"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="0.5dp"
            android:layout_height="300dp">
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="net.simplifiedcoding.mymapapp.MapsActivity" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>