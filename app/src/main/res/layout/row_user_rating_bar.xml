<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardElevation="0.5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:text="Imad Ferroudji"
            android:id="@+id/rating_user_name"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="#2D2D2D"
            android:textSize="17sp"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:text="2020-04-10"
            android:id="@+id/rating_user_date"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="#AEAEAE"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:id="@+id/card_product_rating"
            android:isIndicator="true"
            style="@style/Widget.AppCompat.RatingBar.Small"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/rating_user_message"
            android:layout_marginBottom="5dp"
            android:text="ter took a galley of type and"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="#AEAEAE"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat" />
    </LinearLayout>
</androidx.cardview.widget.CardView>